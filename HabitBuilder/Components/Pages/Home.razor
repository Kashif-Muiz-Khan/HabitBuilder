@page "/"
@using HabitBuilder.Model
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<h3>Habit Builder</h3>

@if (user == null)
{
    <div class="alert alert-warning">
        You need to log in to see your habit progress.
    </div>
}
else
{
    <HabitGraph />
    <OrderForm />
}

@code {
    private User user;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var isAuthenticated = authState.User?.Identity?.IsAuthenticated == true;

        if (isAuthenticated)
        {
            // Assuming you have a way to retrieve the user details
            // Here, you could fetch the user details based on the username or other info
            user = new User
                {
                    UserName = authState.User.Identity.Name
                    // Set other properties if needed
                };
        }
    }
}
